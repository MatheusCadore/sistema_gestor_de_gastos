<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestorgastos.sistema_gestor_gastos.controller.MainController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <children>
      <HBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" spacing="100.0">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <VBox minHeight="-Infinity" minWidth="-Infinity" prefWidth="100.0">
               <children>
                  <Label text="Entradas: R$" />
                  <Label fx:id="incomeLabel" />
               </children>
            </VBox>
            <VBox prefWidth="100.0">
               <children>
                  <Label text="Saidas: R$" />
                  <Label fx:id="expensesLabel" />
               </children>
            </VBox>
            <VBox prefWidth="100.0">
               <children>
                  <Label text="Total: R$" />
                  <Label fx:id="totalLabel" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Descrição" />
                  <TextField fx:id="descEditText" minWidth="-Infinity" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Valor" />
                  <TextField fx:id="valueEditText" minWidth="-Infinity" />
               </children>
            </VBox>
            <ComboBox fx:id="catComboBox" minWidth="-Infinity" promptText="Categoria" />
            <ComboBox fx:id="typeComboBox" minWidth="-Infinity" promptText="Tipo" />
            <Button fx:id="addBtn" minWidth="-Infinity" mnemonicParsing="false" onAction="#addBtnClicked" text="Adicionar" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <TableView maxWidth="1.7976931348623157E308">
              <columns>
                <TableColumn prefWidth="75.0" text="C1" />
                <TableColumn prefWidth="75.0" text="C2" />
                  <TableColumn prefWidth="75.0" text="C3" />
                  <TableColumn prefWidth="75.0" text="C4" />
              </columns>
            </TableView>
         </children>
      </HBox>
   </children>
</VBox>
